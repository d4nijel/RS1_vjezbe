@using RS1_Ispit_asp.net_core.ViewModels
@model AjaxStavkaUrediVM

@{
    ViewData["Title"] = "Uredi";
}

<h3>Evidentiranje rezultata</h3>

<form asp-action="Snimi" ajax-poziv="da" ajax-rezultat="nekiId">
    <input asp-for="MaturskiIspitStavkaId" hidden />
    <div class="form-group">
        <label>Učenik:</label>
        <input asp-for="Ucenik" readonly class="form-control" />
    </div>
    <div class="form-group">
        <label>Bodovi:</label>
        <input asp-for="Bodovi" value="@Model.Bodovi" class="form-control" />
        <span asp-validation-for="Bodovi" class="text-danger"></span>
    </div>
    <input type="submit" value="Snimi" class="btn btn-default" />
</form>

