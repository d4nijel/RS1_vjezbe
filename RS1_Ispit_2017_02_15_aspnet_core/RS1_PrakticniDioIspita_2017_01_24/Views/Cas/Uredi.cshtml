@using RS1_PrakticniDioIspita_2017_01_24.Helper;
@using RS1_PrakticniDioIspita_2017_01_24.ViewModels;

@model CasDodajVM

@{
    ViewData["Title"] = "Dodaj";
    NastavnikLoginVM LogiraniKorisnik = Context.GetLogiraniKorisnik();
}

<h3>Uredi čas</h3>

<form asp-action="Snimi">
    <input asp-for="OdrzaniCasId" hidden />
    <div class="form-group">
        <label>Nastavnik:</label>
        <input type="text" class="form-control" value="@LogiraniKorisnik.ImePrezime" readonly />
    </div>
    <div class="form-group">
        <label>Datum:</label>
        <input type="date" asp-for="DatumOdrzanogCasa" class="form-control" />
        <span asp-validation-for="DatumOdrzanogCasa" class="text-warning"></span>
    </div>
    <div class="form-group">
        <label>Ak. godina / predmet:</label>
        <input asp-for="AkademskaGodinaPredmet" class="form-control" readonly />
    </div>
    <input type="submit" class="btn btn-default" value="Snimi" />
</form>

<div id="nekiId"></div>

<script>
    $(document).ready(function () {
        $.get("/AjaxStavka/Index?id=@Model.OdrzaniCasId",
            function (rezultat, status) {
                $("#nekiId").html(rezultat);
            });
    });
</script>

